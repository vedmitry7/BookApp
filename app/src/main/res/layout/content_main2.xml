<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#fefcbe"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.vedmitryapps.prosvet.MainActivity"
        tools:showIn="@layout/app_bar_main"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:id="@+id/title"
            android:text="@string/title_1"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:paddingRight="8dp"
            android:paddingLeft="70dp"
            android:layout_below="@+id/title"
            android:gravity="right"
            android:id="@+id/epigraph"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:textColor="@android:color/black"
            android:text="@string/epigraph_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.vedmitryapps.prosvet.JustifiedTextView
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            xmlns:noghteh="http://noghteh.ir"
            android:paddingTop="16dp"
            android:layout_below="@id/epigraph"
            android:id="@+id/chapter"
            android:text="@string/Chapter_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            noghteh:text="@string/Chapter_1"
            noghteh:textColor="@android:color/black"
            noghteh:textSize="18sp"
            />

    </RelativeLayout>


</ScrollView>