<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefcbe"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vedmitryapps.prosvet.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:gravity="center"
        android:id="@+id/title"
        android:text="@string/title_1"
        android:textSize="24sp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:gravity="right"
        android:id="@+id/epigraph"
        android:textSize="18sp"
        android:textDirection="inherit"
        android:text="@string/epigraph_1"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginLeft="83dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/chapter"
        android:textSize="18sp"
        android:text="@string/Chapter_1"
        android:layout_width="360dp"
        android:layout_height="505dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/epigraph"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />





</android.support.constraint.ConstraintLayout>
